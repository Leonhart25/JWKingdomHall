<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>{% block title %}JW Kingdom Hall{% endblock title %}</title>

    {% block stylesheets %}
        {% stylesheets
        '@KingdomHallMainBundle/Resources/public/css/jwkh.css'
        '%kernel.root_dir%/../vendor/wenzhixin/bootstrap-table/bootstrap-table.min.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}  
    {% endblock %}

    {% block javascript %}
        {% javascripts
        '%kernel.root_dir%/../vendor/jquery/jquery/jquery-1.11.1.js'
        '%kernel.root_dir%/../vendor/twbs/bootstrap/dist/js/bootstrap.min.js'
        '%kernel.root_dir%/../vendor/wenzhixin/bootstrap-table/bootstrap-table.min.js'
        '%kernel.root_dir%/../vendor/wenzhixin/bootstrap-table/extensions/flat-json/bootstrap-table-flat-json.min.js'
        '%kernel.root_dir%/../vendor/wenzhixin/bootstrap-table/extensions/mobile/bootstrap-table-mobile.min.js'
        '%kernel.root_dir%/../vendor/wenzhixin/bootstrap-table/locale/bootstrap-table-en-US.min.js'
        '%kernel.root_dir%/../vendor/wenzhixin/bootstrap-table/locale/bootstrap-table-pt-PT.min.js'
        '%kernel.root_dir%/../vendor/wenzhixin/bootstrap-table/locale/bootstrap-table-fr-FR.min.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock javascript %}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
{% block navbar %}
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">JWKH</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">{% trans %}jwkh.navbar.territories{% endtrans %} <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">{% trans %}jwkh.navbar.administration{% endtrans %}</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Guillaume Petit <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Logout</a></li>
                        </ul>
                    </li>
                </ul>
                {{ knp_menu_render('KingdomHallMainBundle:Builder:switchCongregationMenu', {'template': 'KingdomHallMainBundle:Menu:knp_menu_top.html.twig'}) }}
            </div>
        </div>
    </div>
{% endblock navbar %}

<div class="container">
    <div class="row row-offcanvas row-offcanvas-left">
        {% block menu_left %}
            <div class="col-xs-4 col-sm-2 sidebar-offcanvas menu-left" id="sidebar" role="navigation">
                {% block menu_left_content %}
                    <ul class="nav nav-pills nav-stacked">
                        <li role="presentation"><a href="#">Attributions</a></li>
                        <li role="presentation" class="active"><a href="#">Territoires</a></li>
                        <li role="presentation"><a href="#">Campagnes</a></li>
                    </ul>
                {% endblock menu_left_content %}
            </div>
        {% endblock menu_left %}

        {% block main_content %}
            <div class="col-xs-14 col-sm-10 page">
                <div class="page-header">
                    <h1>{% block page_header %}Page title{% endblock page_header %}</h1>
                </div>

                {% block content %}
                    <div class="row">
                        <div class="page-content col-xs-14 col-sm-10">
                            {% block content_left %}
                                Main content
                            {% endblock content_left %}
                        </div>
                        <div class="page-actions col-xs-4 col-sm-2">
                            {% block content_right %}
                                Right actions
                            {% endblock content_right %}
                        </div>
                    </div>
                {% endblock content %}
            </div>
        {% endblock main_content %}
    </div>
</div>
</body>
</html>