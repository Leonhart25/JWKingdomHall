{% endblock navbar %}

<div class="container">
    <div class="row row-offcanvas row-offcanvas-left">
        {% block menu_left %}
            <div class="col-xs-4 col-sm-2 sidebar-offcanvas menu-left" id="sidebar" role="navigation">
                {% block menu_left_content %}
                    <ul class="nav nav-pills nav-stacked">
                    </ul>
                {% endblock menu_left_content %}
            </div>
        {% endblock menu_left %}

        {% block main_content %}
            <div class="col-xs-14 col-sm-10 page">
                <div class="page-header">
                    <h1>{% block content_header %}Page title{% endblock content_header %}</h1>
                </div>

                {% block content %}
                    <div class="row">
                        <div class="page-content col-xs-14 col-sm-10">
                            {% block content_body %}
                            {% endblock content_body %}
                            {% block content_footer %}
                            {% endblock content_footer %}
                        </div>
                        <div class="page-actions col-xs-4 col-sm-2">
                            {% block content_right %}
                                Right actions
                            {% endblock content_right %}
                        </div>
                    </div>
                {% endblock content %}
            </div>
        {% endblock main_content %}
    </div>
</div>
<div id="pageModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modal-label"></div>
<script>
    $(document).ready(function () {
        $('.modal').on('shown.bs.modal', function (e) {
            var modal = this;
            $('.modal-footer .action-save', modal).on('click', function (data) {
                data.preventDefault();
                var formData = new FormData($('form')[0]);
                var url = $('form', modal).attr('action');
                var uploadFields = $('form input[type="file"]');
                $.each(uploadFields, function (index, uploadField) {
                    var file = uploadField.files[0];
                    formData.append(uploadField.getAttribute('name'), file);
                });

                var xhr = new XMLHttpRequest();
                xhr.open('POST', url, false);
                xhr.setRequestHeader("X-Requested-With", "XMLHttpRequest");
                xhr.onprogress = function (e) {
                    $('.modal-footer .action-save').button('loading');
                };
                xhr.onload = function () {
                    if ($('.form-errors', xhr.responseText).children().length > 0) {
                        $('.modal-content', modal).html(xhr.responseText);
                        $('.modal').trigger('shown.bs.modal');
                    } else {
                        $('.modal').modal('hide');
                    }
                };
                xhr.send(formData);
            });
        });

        $('.bs-checkbox').on('click', function (e) {
            e.preventDefault();
            $('input', this).prop('checked', true);
        });
    });
</script>
</body>
</html>