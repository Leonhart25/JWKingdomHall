                <a class="navbar-brand" href="#">JWKH</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                {{ knp_menu_render('KingdomHallMainBundle:Builder:navbarMenu', {'currentClass': 'active', 'template': 'KingdomHallMainBundle:Menu:knp_menu_left.html.twig'}) }}
                {#<ul class="nav navbar-nav">#}
                    {#<li class="active"><a href="#">{% trans %}jwkh.navbar.territories{% endtrans %} <span class="sr-only">(current)</span></a></li>#}
                    {#<li><a href="#">{% trans %}jwkh.navbar.administration{% endtrans %}</a></li>#}
